{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_comment": "TypeScript configuration for React frontend applications. Extends base config with JSX and DOM support.",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "moduleDetection": "force",

    "noEmit": true,

    "allowImportingTsExtensions": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ]
}
