{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_comment": "TypeScript configuration for Node.js backend applications. Extends base config with Node.js-specific settings.",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "./dist",
    "rootDir": "./src",

    "verbatimModuleSyntax": false,
    "allowImportingTsExtensions": false,
    "noEmit": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ]
}
